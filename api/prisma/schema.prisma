generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id               String    @id @default(cuid())
  email            String    @unique
  name             String
  password         String
  refresh_token    String?   @unique
  token_expiration DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  sessions user_sessions[]
}

model user_sessions {
  id               String   @id @default(cuid())
  userId           String
  refresh_token    String   @unique
  token_expiration DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user users @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token_expiration])
}

model accounts {
  id        String   @id @default(cuid())
  userId    String
  active    Boolean  @default(true)
  name      String
  balance   Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions transactions[]
  operations   operations[]
  symbols      symbols[]
  priceHistory price_history[]

  @@index([userId])
}

model transactions {
  id          String   @id @default(cuid())
  accountId   String
  userId      String
  amount      Float
  origin      String
  description String?  @db.VarChar(255)
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  account accounts @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([origin])
  @@index([userId, date])
  @@index([accountId], map: "transactions_accountId_fkey")
  @@index([accountId, date])
}

model symbols {
  id        String   @id @default(cuid())
  code      String
  marketCode String?
  marketProvider String?
  marketExchange String?
  marketSyncStatus String?
  marketSyncError String? @db.VarChar(500)
  name      String
  logo      String?
  product   String
  sortOrder Int      @default(0)
  userId    String
  accountId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account      accounts        @relation(fields: [accountId], references: [id], onDelete: Cascade)
  operations   operations[]
  priceHistory price_history[] @relation("SymbolPriceHistory")

  @@index([userId])
  @@index([accountId])
  @@index([accountId, sortOrder])
  @@unique([accountId, code])
}

model operations {
  id        String   @id @default(cuid())
  accountId String
  userId    String
  symbolId  String
  product   String
  type      String
  leverage  Float?
  status    String   @default("open")
  balance   Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account accounts            @relation(fields: [accountId], references: [id], onDelete: Cascade)
  symbol  symbols             @relation(fields: [symbolId], references: [id])
  entries operation_entries[]

  @@index([userId])
  @@index([accountId])
  @@index([symbolId])
  @@index([status])
  @@index([userId, status])
  @@index([userId, status, updatedAt])
  @@index([accountId, status])
}

model operation_entries {
  id          String   @id @default(cuid())
  operationId String
  entryType   String
  quantity    Float
  price       Float
  tax         Float    @default(0)
  date        DateTime
  createdAt   DateTime @default(now())

  operation operations @relation(fields: [operationId], references: [id], onDelete: Cascade)

  @@index([operationId])
  @@index([operationId, date])
  @@index([operationId, entryType])
}

model price_history {
  id        String   @id @default(cuid())
  symbolId  String
  userId    String
  accountId String
  price     Float
  date      DateTime
  createdAt DateTime @default(now())

  symbol symbols @relation("SymbolPriceHistory", fields: [symbolId], references: [id], onDelete: Cascade)
  account accounts @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([symbolId])
  @@index([symbolId, date])
  @@index([userId])
  @@index([accountId])
  @@index([accountId, date])
}
